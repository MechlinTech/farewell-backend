generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  firstName     String
  lastName      String?
  email         String   @unique
  phone         String
  password      String
  role          Role
  isVerified    Boolean  @default(false)
  accountStatus String   @default("ACTIVE") // ACTIVE | LOCKED
  fcmToken      String?
  isLocationSet Boolean  @default(false)
  createdAt     DateTime @default(now())

  otps                  Otp[]
  vehicles              VehicleDetail[]
  rider                 Rider[]
  instantDeliveryCart   instantDeliveryCart[]
  scheduledDeliveryCart ScheduledDeliveryCart[]
  userAddress           userAddress[]
  payment               payment[]
  deliveryRide          deliveryRide[]
}

enum Role {
  CUSTOMER
  DRIVER
  ADMIN
}

model Otp {
  id          String    @id @default(uuid())
  userId      String
  code        String
  expiresAt   DateTime
  attempts    Int       @default(0)
  resendCount Int       @default(0)
  lockedUntil DateTime?
  createdAt   DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VehicleDetail {
  id               String      @id @default(uuid())
  userId           String
  riderId          String
  vehicleNumber    String      @unique
  model            String
  capacity         Int
  license          String
  vehicleRC        String
  vehicleInsurance String
  vehicleType      vehicleType @default(CAR)
  createdAt        DateTime    @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  rider Rider @relation(fields: [riderId], references: [id], onDelete: Cascade)
}

enum vehicleType {
  CAR
  BIKE
  TRUCK
}

model Rider {
  id                 String                  @id @default(uuid())
  userId             String
  vehicleDetailSet   Boolean                 @default(false)
  isVerified         riderVerificationStatus @default(UNVERIFIED)
  bankDetails        Boolean                 @default(false)
  status             RiderWorkStatus         @default(IDLE)
  active             Boolean                 @default(false)
  stripeAccountId    String?
  currentRideId      String?
  rating             Int                     @default(0)
  totalEarnings      Float                   @default(0)
  createdAt          DateTime                @default(now())

  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  deliveryRide  deliveryRide[]
  vehicleDetail VehicleDetail[]
}

enum riderVerificationStatus {
  VERIFIED
  UNVERIFIED
  REJECTED
}

enum RiderWorkStatus {
  IDLE // no ride
  ASSIGNED // accepted but not picked
  PICKED_UP // order picked
  ON_TRIP
}

model instantDeliveryCart {
  id           String          @id @default(uuid())
  customerId   String
  parcelStatus DeliveryStatus?
  deliveryType deliveryType    @default(INSTANT_DELIVERY)

  pickupLat    Float
  pickupLng    Float
  dropLocation String
  price        Float
  tip          Float  @default(0)

  quantity  Int
  size      Size
  picture   String?
  createdAt DateTime @default(now())

  customer User @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([pickupLat, pickupLng])
}

enum Size {
  SMALL
  MEDIUM
  LARGE
}

enum deliveryType {
  INSTANT_DELIVERY
  SCHEDULED_DELIVERY
}

enum DeliveryStatus {
  ACCEPTED
  REJECTED
}

model ScheduledDeliveryCart {
  id           String          @id @default(uuid())
  customerId   String
  parcelStatus DeliveryStatus?
  deliveryType deliveryType    @default(SCHEDULED_DELIVERY)

  pickupLat    Float
  pickupLng    Float
  dropLocation String
  price        Float
  tip          Float  @default(0)

  quantity  Int
  size      Size
  picture   String?
  date      DateTime
  time      DateTime
  createdAt DateTime @default(now())

  customer User @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([pickupLat, pickupLng])
}

model userAddress {
  id           String      @id @default(uuid())
  userId       String
  addressLine1 String
  addressLine2 String?
  city         String
  state        String
  country      String
  postalCode   String
  lat          Float
  lng          Float
  addressType  addressType
  isDefault    Boolean     @default(false)
  createdAt    DateTime    @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum addressType {
  HOME
  WORK
  OTHER
}

model faq {
  id        String      @id @default(uuid())
  question  String      @unique
  answer    String
  category  FaqCategory
  isActive  Boolean     @default(true)
  createdAt DateTime    @default(now())
}

enum FaqCategory {
  GENERAL
  PAYMENT
  CUSTOMER
  RIDER
  OTHER
}

model payment {
  id                    String        @id @default(uuid())
  userId                String
  amount                Float
  status                paymentStatus @default(PENDING)
  currency              String        @default("USD")
  paymentMethod         String        @default("CARD")
  escrowStatus          escrowStatus?
  stripePaymentIntentId String?       @unique
  createdAt             DateTime      @default(now())

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  deliveryRide deliveryRide[]
}

enum paymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum escrowStatus {
  HELD
  RELEASED
  REFUNDED
}

model deliveryRide {
  id                String             @id @default(uuid())
  orderId           String             @unique
  customerId        String
  riderId           String?
  pickupReached     Boolean            @default(false)
  deliveryCartId    String
  paymentId         String?            @unique
  status            deliveryRideStatus @default(PENDING)
  completedAt       DateTime?
  dropOffPicture    String?
  payoutDone        Boolean            @default(false)
  payoutProcessing  Boolean            @default(false)
  payoutAttemptedAt DateTime?
  deliveryType      deliveryType
  createdAt         DateTime           @default(now())

  customer User     @relation(fields: [customerId], references: [id], onDelete: Cascade)
  rider    Rider?   @relation(fields: [riderId], references: [id], onDelete: Cascade)
  payment  payment? @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  @@index([status, payoutDone, completedAt])
}

enum deliveryRideStatus {
  PENDING
  ACCEPTED
  IN_PROGRESS
  REJECTED
  CANCELLED
  COMPLETED
  FAILED
  RETURNED
}

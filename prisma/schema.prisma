generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  firstName     String
  lastName      String?
  email         String   @unique
  phone         String
  password      String
  role          Role
  isVerified    Boolean  @default(false)
  accountStatus String   @default("ACTIVE") // ACTIVE | LOCKED
  createdAt     DateTime @default(now())

  otps                  Otp[]
  vehicles              VehicleDetail[]
  rider                 Rider[]
  instantDeliveryCart   instantDeliveryCart[]
  scheduledDeliveryCart ScheduledDeliveryCart[]
  userLocation          userLocation[]
  payment               payment[]
  deliveryRide          deliveryRide[]
}

enum Role {
  CUSTOMER
  DRIVER
  ADMIN
}

model Otp {
  id          String    @id @default(uuid())
  userId      String
  code        String
  expiresAt   DateTime
  attempts    Int       @default(0)
  resendCount Int       @default(0)
  lockedUntil DateTime?
  createdAt   DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VehicleDetail {
  id               String      @id @default(uuid())
  userId           String
  vehicleNumber    String      @unique
  model            String
  capacity         Int
  license          String
  vehicleRCNumber  String
  vehicleInsurance String
  vehicleType      vehicleType @default(CAR)
  createdAt        DateTime    @default(now())

  user  User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  rider Rider[]
}

enum vehicleType {
  CAR
  BIKE
  TRUCK
}

model Rider {
  id              String      @id @default(uuid())
  userId          String
  vehicleDetailId String
  isVerified      Boolean     @default(true)
  bankDetails     Boolean     @default(false)
  status          RiderStatus @default(AVAILABLE)
  active          Boolean     @default(false)
  stripeAccountId String?
  createdAt       DateTime    @default(now())

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicleDetail VehicleDetail  @relation(fields: [vehicleDetailId], references: [id], onDelete: Cascade)
  deliveryRide  deliveryRide[]
}

enum RiderStatus {
  AVAILABLE
  BUSY
}

model instantDeliveryCart {
  id         String         @id @default(uuid())
  customerId String
  status     DeliveryStatus @default(PENDING)

  pickupLat  Float
  pickupLng  Float
  dropoffLat Float
  dropoffLng Float

  quantity  Int
  size      Size
  picture   String?
  createdAt DateTime @default(now())

  customer     User           @relation(fields: [customerId], references: [id], onDelete: Cascade)
  deliveryRide deliveryRide[]

  @@index([pickupLat, pickupLng])
  @@index([dropoffLat, dropoffLng])
}

enum Size {
  SMALL
  MEDIUM
  LARGE
}

enum DeliveryStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
  FAILED
}

model ScheduledDeliveryCart {
  id         String         @id @default(uuid())
  customerId String
  status     DeliveryStatus @default(PENDING)

  pickupLat  Float
  pickupLng  Float
  dropoffLat Float
  dropoffLng Float

  quantity  Int
  size      Size
  picture   String?
  date      DateTime
  time      DateTime
  createdAt DateTime @default(now())

  customer     User           @relation(fields: [customerId], references: [id], onDelete: Cascade)
  deliveryRide deliveryRide[]

  @@index([pickupLat, pickupLng])
  @@index([dropoffLat, dropoffLng])
}

model userLocation {
  id          String   @id @default(uuid())
  userId      String   @unique
  locationLat Float
  locationLng Float
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([locationLat, locationLng])
}

model faq {
  id        String      @id @default(uuid())
  question  String      @unique
  answer    String
  category  FaqCategory
  isActive  Boolean     @default(true)
  createdAt DateTime    @default(now())
}

enum FaqCategory {
  GENERAL
  PAYMENT
  CUSTOMER
  RIDER
  OTHER
}

model payment {
  id                    String        @id @default(uuid())
  userId                String
  amount                Float
  status                paymentStatus @default(PENDING)
  currency              String        @default("USD")
  paymentMethod         String        @default("CARD")
  escrowStatus          escrowStatus?
  stripePaymentIntentId String?       @unique
  createdAt             DateTime      @default(now())

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  deliveryRide deliveryRide[]
}

enum paymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum escrowStatus {
  HELD
  RELEASED
  REFUNDED
}

model deliveryRide {
  id                String             @id @default(uuid())
  customerId        String
  riderId           String?
  deliveryCartId    String
  paymentId         String?            @unique
  status            deliveryRideStatus @default(PENDING)
  completedAt       DateTime?
  dropOffPicture    String?
  payoutDone        Boolean            @default(false)
  payoutProcessing  Boolean            @default(false)
  payoutAttemptedAt DateTime?
  createdAt         DateTime           @default(now())

  @@index([status, payoutDone, completedAt])

  customer                User                   @relation(fields: [customerId], references: [id], onDelete: Cascade)
  rider                   Rider?                 @relation(fields: [riderId], references: [id], onDelete: Cascade)
  deliveryCart            instantDeliveryCart    @relation(fields: [deliveryCartId], references: [id], onDelete: Cascade)
  scheduledDeliveryCartId String?
  scheduledDeliveryCart   ScheduledDeliveryCart? @relation(fields: [scheduledDeliveryCartId], references: [id], onDelete: Cascade)
  payment                 payment?               @relation(fields: [paymentId], references: [id], onDelete: Cascade)
}

enum deliveryRideStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
  COMPLETED
  FAILED
}
